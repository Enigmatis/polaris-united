{
  "compilerOptions": {
    "module": "commonjs",
    "strict": false,
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./packages",
    "paths": {
      "@enigmatis/*": ["*/src"]
    },
    "incremental": true,
    "skipLibCheck": true
  }
}
