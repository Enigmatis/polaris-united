{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "types": [ "node", "mocha", "chai" ],
    "typeRoots": [
      "src/type-declarations"
    ],
    "declaration": true,
    "lib": [
      "es6",
      "es2017",
      "esnext",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
